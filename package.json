{
  "name": "xray-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub action to import test results into 'Xray' - A complete Test Management tool for Jira.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikepenz/xray-action.git"
  },
  "keywords": [
    "actions",
    "xray",
    "junit",
    "cucumber",
    "behave",
    "testng",
    "nunit",
    "xunit",
    "robot",
    "bundle"
  ],
  "author": "Mike Penz",
  "license": "Apache 2.0",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/glob": "^0.1.1",
    "@supercharge/promise-pool": "^1.6.1",
    "@types/mime-types": "^2.1.0",
    "form-data": "^4.0.0",
    "got": "^11.8.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/parser": "^4.21.0",
    "@vercel/ncc": "^0.28.1",
    "eslint": "^7.23.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.3.4",
    "jest": "^26.6.0",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "node-notifier": ">=9.0.1",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
