{
  "name": "xray-action",
  "version": "3.0.0",
  "private": true,
  "description": "GitHub action to import test results into 'Xray' - A complete Test Management tool for Jira.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikepenz/xray-action.git"
  },
  "keywords": [
    "actions",
    "xray",
    "junit",
    "cucumber",
    "behave",
    "testng",
    "nunit",
    "xunit",
    "robot",
    "bundle"
  ],
  "author": "Mike Penz",
  "license": "Apache 2.0",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/glob": "^0.4.0",
    "@supercharge/promise-pool": "^3.2.0",
    "@types/mime-types": "^2.1.4",
    "@xray-app/xray-automation": "^0.3.1",
    "form-data": "^4.0.0",
    "got": "11.8.6",
    "junit-report-merger": "^7.0.0",
    "webpack": "^5.93.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "github:github/eslint-plugin-github#0688bafaac755c06af5449afd6203314f11d285c",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "node-notifier": "^10.0.1",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  }
}
