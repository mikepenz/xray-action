{
  "name": "xray-action",
  "version": "3.2.0",
  "private": true,
  "description": "GitHub action to import test results into 'Xray' - A complete Test Management tool for Jira.",
  "main": "lib/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "format-fix": "eslint --fix src/**.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikepenz/xray-action.git"
  },
  "keywords": [
    "actions",
    "xray",
    "junit",
    "cucumber",
    "behave",
    "testng",
    "nunit",
    "xunit",
    "robot",
    "bundle"
  ],
  "author": "Mike Penz",
  "license": "Apache 2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/glob": "^0.5.0",
    "@supercharge/promise-pool": "^3.2.0",
    "@types/mime-types": "^2.1.4",
    "form-data": "^4.0.2",
    "got": "14.4.7",
    "junit-report-merger": "^7.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.6",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.1",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "node-notifier": "^10.0.1",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9"
  },
  "overrides": {
    "glob": "11.0.1",
    "typescript": "^5.8.3"
  }
}
